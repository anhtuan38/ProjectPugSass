
extend ../base/base.pug
block variables
  - const current="/list-category-product.html"
  - const title = "List Product"

block title
    title= title + " | Drink Website"


block main
  .container
    section
      +breadcrumb("Trang chủ", "Sản phẩm", "Rượu vang đỏ")
    section.banner
      img(src="./assets/images/list-image1.jpg", alt="banner")
    section.row
      .col-4.list-category
        h2.main-heading Danh mục sản phẩm
        ul.sidebar__list.py-3
            each item in listCategories
                li.sidebar__item= item
        h2.main-heading so sánh sản phẩm
        p.text-compare Bạn chưa có sản phẩm nào để so sánh
        h2.main-heading Tag sản phẩm
        ul.tag__list
            each itemTag in tags
                li.tag__item.text-center= itemTag
        img(src="./assets/images/list-image2.jpg", style="width: 100%" alt="tag")
      .col-8.list-product
        .tab-content
        ul#example-tabs.nav.nav-tabs(role='tablist')
          li.nav-item
            a#tab1.nav-link.active(data-toggle='tab' role='tab' href='#pane-tab-1') Tab1
          li.nav-item
            a#tab2.nav-link(data-toggle='tab' role='tab' href='#pane-tab-2') Tab2
          li.nav-item
            a#tab3.nav-link(data-toggle='tab' role='tab' href='#pane-tab-3') Tab3

        #pane-tab-1.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='tab1')

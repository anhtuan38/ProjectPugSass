
extend ../base/base.pug
block variables
  - const current="/detail-product.html"
  - const title = "Detail Product"
  - const description = "Một hợp chất có trong rượu vang được gọi là resveratro có khả năng làm tăng tối đa tuổi thọ. Resveratro còn có khả năng ngăn chặn mật độ ôxy hoá của protein béo."

block title
    title= title + " | Drink Website"


block main
  .container
    section
      +breadcrumb("Trang chủ", "Sản phẩm", "Rượu vang đỏ")
    section.detail__content.container
      .detail__slide
          ul.detail__list
              button.detail__up
                  i(class="fas fa-arrow-up")
              each item in detailImageList
                  li.detail__item
                          img(src=item.src, alt=item.alt)
              button.detail__down
                  i(class="fas fa-arrow-down")
          .detail__img
              img(src="/assets/images/Product/10.jpg", alt="detail images")
          .detail__product.col-md-6
              .detail__title
                h2.main-heading Rượu nho năm 1987
                p.main-price.mt-5 300.000
                  sup đ
              .detail__rating
                - for (let i=0; i<5; i++)
                  i.fas.fa-star.rating-icon
                span.mx-3 1 Review&lpar;S&rpar;
                button Add Your Review
              .detail__color.mt-4
                  h4.detail__title màu sắc
                  ul.color__list.d-flex
                      li.color__item
                        button.button(type="button" style="--color-btn: yellow;")
                      li.color__item
                        button.button(type="button" style="--color-btn: black;")
                      li.color__item
                        button.button(type="button" style="--color-btn: red;")
                  h4.detail__title kích cỡ
                  .detail__size
                    <select name="size">
                        <option value="big">Loại to</option>
                        <option value="medium">Loại vừa</option>
                        <option value="small">Loại nhỏ</option>
                    </select>
                  h4.detail__title Số lượng
                  .detail__amount
                    button.btn-adjust -
                    input(type="text" value="3" class="input-amount")
                    button.btn-adjust +
                    button.button(type="button") add to card
                  .detail__action
                    button.icon
                      i.fa-solid.fa-heart
                      | Yêu thích
                    button.icon
                      i.fas.fa-signal.mr-1
                      | So sánh
                    button.icon
                      i.fa-solid.fa-envelope
                      | Email
                  h4.detail__title mô tả
                  .detail__description
                    p= description
                  img(src="./assets/images/6.png", class="mt-3" alt="logo")
      .tabs
        .detail__tabs
          ul(class="nav nav-tabs" id="nav-tab" role="tablist")
              each itemContent in tabContent
                  if(itemContent.isActive)
                      li(class="nav-item" role="presentation")
                          a(class="nav-link active" id=`${itemContent.id}-tab` data-toggle="tab" href=`#${itemContent.id}` role="tab" aria-controls=itemContent.id aria-selected="true")=itemContent.name
                  else
                      li(class="nav-item")
                          a(class="nav-link" id=`${itemContent.id}-tab` data-toggle="tab" href=`#${itemContent.id}` role="tab" aria-controls=itemContent.id aria-selected="false")=itemContent.name
          .tab-content#nav-tab.py-3
              each itemDesc in tabDesc
                  if(itemDesc.isActive)
                      p(class="tab-pane fade show active" style='text-indent: 1rem' id=itemDesc.id role="tabpanel" aria-labelledby=`${itemDesc.id}-tab`)=itemDesc.source
                  else
                      p( class="tab-pane fade" id=itemDesc.id style='text-indent: 1rem' role="tabpanel" aria-labelledby=`${itemDesc.id}-tab`)=itemDesc.source
        .img-wrapper
          img(src="/assets/images/home-image7.jpg", alt="detail images")
          img(src="/assets/images/ruounho.png", class="image-hover" alt="hover-img")
      .product
        h2.introduction__title Sản phẩm liên quan
        .product__item
          +products({ products: newProducts })

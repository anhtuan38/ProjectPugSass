mixin form({label, id, type, value})
  .form-rows
    if type == "checkbox"
      .form-check.form-group.col-sm-10.offset-sm-2
        label(class="col-sm-2 col-form-label")= label
          input(class="form-check-input" type= type  required)
    else
      .row.mb-3
        label.col-sm-2.col-form-label= label
        .col-sm-10
          input.form-control(type= type)
